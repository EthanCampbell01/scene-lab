{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Expanded Visual Novel Scene",
  "type": "object",
  "required": [
    "sceneId",
    "variantId",
    "intro",
    "nodes",
    "endings",
    "uiHints",
    "themeSignals"
  ],
  "properties": {
    "sceneId": {
      "type": "string"
    },
    "variantId": {
      "type": "string"
    },
    "intro": {
      "type": "object",
      "required": [
        "narration"
      ],
      "properties": {
        "narration": {
          "type": "string"
        }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "nodeId",
          "narration",
          "choices"
        ],
        "properties": {
          "nodeId": {
            "type": "string"
          },
          "narration": {
            "type": "string"
          },
          "choices": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "choiceId",
                "text",
                "guards",
                "effects",
                "to"
              ],
              "properties": {
                "choiceId": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "guards": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "effects": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "to": {
                  "type": "string"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "endings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "endingId",
          "title",
          "type",
          "narration"
        ],
        "properties": {
          "endingId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "success",
              "mixed",
              "failure",
              "twist"
            ]
          },
          "narration": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "uiHints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "themeSignals": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}